doctype html

include ../components

block variables

html(lang="ru")
  head

    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Карьера в articul")
    //- генерируется favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста строчки crossorigin="use-credentials"
    link(rel="apple-touch-icon", sizes="180x180", href="favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="favicon/favicon-16x16.png")
    link(rel="manifest", href="favicon/site.webmanifest", crossorigin="use-credentials")
    link(rel="mask-icon", href="favicon/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor", content="#da532c")
    meta(name="theme-color", content="#ffffff")
    link(rel="preload", href="fonts/montserrat-regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/druk-wide-cyr-medium.woff2", as="font", crossorigin="anonymous")
    if (openGraf)
      meta(property="og:title", content="Карьера в Articul")
      meta(property="og:image", content="#")
      meta(property="og:image:type", content="image/jpg")
      meta(property="og:image:width", content="1200")
      meta(property="og:image:height", content="630")
      meta(property="og:type", content="website")

    link(rel="stylesheet", href="css/style.min.css")
    //- link(rel="icon" href="img/favicon.ico")

  body
    //- Yandex.Metrika counter
    include ../html/yandex-noscript.html

    +sprite()
    .noise
      canvas#noise

    .wrapper(class=wrapperMods, data-scroll-container)
      block main
      block footer
        if (hasFooter)
          +footer(footerMods)

    block modals


    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
